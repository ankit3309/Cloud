#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/sh" ]; then
  "$basedir/sh"  "$basedir/../pre-git/bin/pre-commit" "$@"
  ret=$?
else 
  sh  "$basedir/../pre-git/bin/pre-commit" "$@"
  ret=$?
fi
exit $ret
